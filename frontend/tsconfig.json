{
    "compilerOptions": {
      "sourceMap": true,
      // TSはECMAScript 5に変換
      "strict": true,
      "target": "ESNEXT",
      // TSのモジュールはES Modulesとして出力
      "module": "commonjs",
      // JSXの書式を有効に設定
      "jsx": "preserve",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "lib": [
        "es2017",
        "dom"
      ],
      "baseUrl":".",
      "rootDir": ".",
      "paths": {
        "@/*": ["src/*"]
      },
      "typeRoots": ["types", "node_modules/@types"],
      "resolveJsonModule": true
    },
    "exclude": [
      "node_modules"
    ]
  }